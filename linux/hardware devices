cat /proc/cpuinfo

//motherboard
sudo dmidecode -t 2
sudo dmidecode  | grep -A4 '^Base Board Information'
cat /sys/devices/virtual/dmi/id/board_{vendor,name,version}
dmesg | grep DMI:
sudo dmidecode --string baseboard-product-name

//pci
lspci

//all
sudo dmidecode | more
sudo lshw





