{% extends 'base.html.twig' %}

{% block body %}

    <main role="main">
        <div class="container">
            <br>
            <div class="row">
                <div class="col">
                    <div class="mt-2">
                        <h1 class="h2">Profile</h1>
                        {% if app.user %}
                            <div class="table-responsive">
                                <table class="table table-striped table-sm">
                                    <tbody>
                                    <tr>
                                        <td><strong>ID</strong></td>
                                        <td>{{ app.user.getId() }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Username</strong></td>
                                        <td>{{ app.user.getusername() }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Lastname</strong></td>
                                        <td>{{ app.user.getlastname() }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Email</strong></td>
                                        <td>{{ app.user.getemail() }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Roles</strong></td>
                                        <td>{{ app.user.getroles()|join(',') }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Description</strong></td>
                                        <td>{{ app.user.getdescription() }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Is Active</strong></td>
                                        <td>{{ app.user.getisactive() }}</td>
                                    </tr>

                                    </tbody>
                                </table>
                            </div>
                        {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                            <h3>You are authenticated anonymously</h3>
                        {% endif %}

                        <!--Link-button to administration section-->
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="btn-toolbar mb-2 mb-md-0">
                                <div class="btn-group mr-2">
                                    <a class="btn btn-success btn-sm" href="{{ url('admin') }}" role="button">Administration</a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock javascripts %}
