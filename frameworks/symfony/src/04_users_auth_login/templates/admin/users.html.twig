{% extends 'admin/admin.html.twig' %}

{% block main %}

    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Users</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a class="btn btn-success btn-sm" href="{{ url('admin_add_user') }}" role="button">Add User</a>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="align-middle">{{ user.getid() }}</td>
                    <td class="align-middle">{{ user.getusername() }}</td>
                    <td class="align-middle">{{ user.getlastname() }}</td>
                    <td class="align-middle">{{ user.getemail() }}</td>
                    <td class="align-middle">{{ user.getroles()|join(',') }}</td>
                    <td class="align-middle">{{ user.getdescription() }}</td>
                    <td class="align-middle">
                        <a class="btn btn-primary btn-sm" href="{{ url('admin_edit_user', {'id': user.getid()}) }}"
                           role="button">Edit</a>
                        <a class="btn btn-danger btn-sm pm-delete"
                           href="{{ url('admin_delete_user', {'id': user.getid()}) }}"
                           role="button">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/assets/js/users.js') }}"></script>
{% endblock javascripts %}
